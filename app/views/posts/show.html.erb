<p style="color: green"><%= notice %></p>

<%= render @post %>

<div>
  <li><%= link_to "Back to posts", posts_path %></li>

  <% if user_signed_in? && @post.user.email == current_user.email %>
    <li><%= link_to "Edit this post", edit_post_path(@post) %></li>
    <li><%= button_to "Destroy this post", @post, method: :delete %></li>
  <% end %>
</div>
